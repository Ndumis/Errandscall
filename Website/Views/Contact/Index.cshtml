<script>
	function sendContact() {
		var valid;
		valid = validateContact();
		if(valid) {
			jQuery.ajax({
				url: "@Url.Action("Contact")",
				data:'name='+$("#name").val()+
				'&surname='+$("#surname").val()+
				'&email='+$("#email").val()+
				'&subject='+$("#subject").val()+
				'&message='+$(message).val(),
				type: "POST",
				success:function(data){
					debugger;
                    $("#contactSuccess").html(data);
                    $('#contactSuccess').removeAttr('hidden');
                    $("#name").val("")
                    $("#surname").val("")
                    $("#email").val("")
                    $("#subject").val("")
                    $("#message").val("")
				},
				error:function (data){
					debugger;
			   }
			});
		}
	}

	function validateContact() {
		var valid = true;
		$(".InputBox").css('border-color','');
		$(".info").html('');
		if(!$("#name").val()) {
			$("#name-info").html("(required)");
			$("#name").css('border-color','#ff0000');
			valid = false;
		}
		if(!$("#surname").val()) {
			$("#surname-info").html("(required)");
			$("#surname").css('border-color','#ff0000');
			valid = false;
		}
		if(!$("#email").val()) {
			$("#email-info").html("(required)");
			$("#email").css('border-color','#ff0000');
			valid = false;
		}
		if(!$("#email").val().match(/^([\w-\.]+@@([\w-]+\.)+[\w-]{2,4})?$/)) {
			$("#email-info").html("(invalid)");
			$("#email").css('border-color','#ff0000');
			valid = false;
		}
		if(!$("#subject").val()) {
			$("#subject-info").html("(required)");
			$("#subject").css('border-color','#ff0000');
			valid = false;
		}
		if(!$("#message").val()) {
			$("#message-info").html("(required)");
			$("#message").css('border-color','#ff0000');
			valid = false;
		}
		return valid;
	}
</script>