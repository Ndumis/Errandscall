@model IEnumerable<ErrandscallDatabase.Client>
@{
    ViewBag.Title = "Client Management";
}


<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3" style="background-color: #000">
            <h6 class="m-0 font-weight-bold text-primary float-left">Client Management</h6>
            @*<h6 class="m-0 font-weight-bold text-primary float-right"><a href="@Url.Action("NewClient")"><i class="fas fa-2x fa-plus-circle"></i></a></h6>*@
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Citizen)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Initials)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Surname)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Email)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CellNumber)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Citizen.Description)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Initials)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Surname)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CellNumber)
                                </td>
                                <td>
                                    <a href="@Url.Action("Profile","User", new { @Id = item.Id})" class="btn btn-success btn-xs"><i> View</i></a>
                                    <a href="@Url.Action("EditUser","User", new { @Id = item.Id})" class="btn btn-warning btn-xs"><i> Edit</i></a>
                                    <a href="#" data-toggle="modal" data-id="@item.Id" class="btn btn-danger btn-xs DeleteUserModal"><i> Delete</i></a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



<script>
    document.onreadystatechange = function () {
        if (this.readyState === 'complete') {
            SetNavActive('ClientManagement');
        }
    };
</Script>

