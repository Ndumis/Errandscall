
@using Errandscall.Models
@model LoginDetails
@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    ViewBag.Title = "New Password";
}


<style>
    .left {
        width: 200px;
        float: left;
        height: 100%;
    }

    .right {
        margin-left: 210px;
    }
</style>

<div class="page-wrapper p-t-30 p-b-100 font-poppins">
    <div class="wrapper wrapper--w680">
        <div class="card card-4">

            <div class="card-body">

                <div class="">
                    <img src="~/Content/Images/logo.png" style="height:150px; width:100%" />
                </div>
                <h2 class="title" align="center">New Password</h2>
                <hr />
                <br />
                @using (Html.BeginForm("NewPassword", "Login", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.UserId);

                    <div class="row row-space">
                        <div class="col-12">
                            <div class="input-group">
                                <label class="label">Username *</label>
                                <input class="input--style-4" type="text" name="Username" value="@Model.Username" placeholder="Email/ Id Number" required autofocus readonly>
                                <i class="fa fa-envelope" id="display" style="float: right; margin-top: -25px; margin-left:90%; padding-right: 10px; position: relative; z-index: 1; color: #000;">  </i>
                            </div>
                        </div>
                    </div>
                    <div class="row row-space">
                        <div class="col-12">
                            <div class="input-group">
                                <label class="label">Password</label>
                                <input class="input--style-4 CheckPassword" type="password" id="Password" name="Password" value="@Model.Password" placeholder="Password" required />
                                <i onclick="showPassword('Password')" class="fa fa-eye-slash" id="display" style="float: right; margin-top: -25px; margin-left:90%; padding-right: 10px; position: relative; z-index: 1; cursor: pointer; color: #000;">  </i>
                            </div>
                        </div>
                    </div>
                    <div class="row row-space">
                        <div class="col-12">
                            <div class="input-group">
                                <label class="label">Confirm Password</label>
                                <input class="input--style-4 CheckPassword" type="password" id="ConfirmPassword" name="ConfirmPassword" value="@Model.Password" placeholder="Confrim Password" required />
                                <i onclick="showPassword('ConfirmPassword')" class="fa fa-eye-slash" id="display" style="float: right; margin-top: -25px; margin-left:90%; padding-right: 10px; position: relative; z-index: 1; cursor: pointer; color: #000;">  </i>
                            </div>
                        </div>

                        <label id="CPassword" style="color:red"> </label>
                    </div>

                    <div class="p-t-15">
                        <button class="btn btn--radius btn--green" type="submit" id="submit">Submit</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


